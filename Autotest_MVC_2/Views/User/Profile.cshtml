@model Auto_test.Library.Models.UserModels.User


<style>
    html {
    scroll-behavior: smooth;
}

body {
  margin: 0;
  padding: 0;
  font-family: sans-serif;
  background-image: url(../img/2023-mclaren-artura-101-1655218102.jpg);
  background-size: cover;
  background-repeat: no-repeat;
}
.start {
    background-color: rgba(0, 0, 0, 0.859);
    color: whitesmoke;
    position: relative;
}
* {
  box-sizing: border-box;
}

.container {
  width: 1340px;
  margin: 0 auto;
  padding: 15px 0;
}

.all-button {
  margin: 30px 0;
  font-weight: bold;
  background-color: yellow;
  color: black;
  border: 2px solid transparent;
  transition: 0.5s;
  font-size: 20px;
  padding: 13px 20px;
  border-radius: 20px 0 20px 0;
}
    .all-button:hover {
        background-color: transparent;
        color: whitesmoke;
        border: 2px solid yellow;
        transition: 0.5s;
    }

.ucer {
  display: flex;
  flex-direction: column;
}
.ucer h1 {
  font-size: 50px;
  margin: 0;
  padding: 0;
  padding-bottom: 10px;
}
    .ucer p {
        margin: 0;
        padding: 10px 0;
        color: whitesmoke;
    }
    .ucer span {
        color: whitesmoke;
    }

.ucer-img {
  border-radius: 50%;
  min-width: 300px;
  min-height: 300px;
  overflow: hidden;
}
.ucer-img img {
  transition: 1s;
  width: 305px;
  height: 305px;
  object-fit: cover;
  border-radius: 50%;
}
.ucer-img img:hover {
  transform: scale(1.1);
  transition: 1s;
}

.start {
  background-color: rgba(0, 0, 0, 0.859);
  color: whitesmoke;
  position: relative;
}
.start .card {
  display: flex;
  align-items: center;
  gap: 35px;
  padding-top: 30px;
  padding-left: 30px;
}
.start .help {
  position: absolute;
  right: 0;
  top: 100px;
  cursor: pointer;
  text-align: center;
  width: 250px;
}
.start .help p {
  font-size: 15px;
}
.start .help i {
  font-size: 50px;
}

.vilets {
  padding-top: 50px;
}
.vilets label {
  display: flex;
  align-items: center;
}
.vilets input {
  margin-left: 10px;
  width: 100px;
  font-size: 16px;
  padding: 5px 10px;
}

.vilets form {
  padding-bottom: 19px;
}
.vilets form span {
  color: yellow;
}
.vilets form h1 {
  font-size: 23px;
}
.vilets form .hafta {
  color: yellow;
  padding: 10px 0;
}

.vilet-animat {
  color: yellow;
  width: 400px;
  animation-name: vilet-animat;
  animation-duration: 5s;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  animation-direction: alternate-reverse;
}
@@keyframes vilet-animat {
  100% {
    transform: translateX(150px);
  }
}

@@media only screen and (max-width: 1200px) and (min-width: 900px) {
  .container {
    width: 900px !important;
    margin: 0 auto !important;
    padding: 0 15px !important;
  }
  .ucer-img {
    border-radius: 50%;
    min-width: 100px;
    min-height: 100px;
    overflow: hidden;
  }
  .ucer-img img {
    width: 200px;
    height: 200px;
  }
  .ucer h1 {
    font-size: 30px;
  }
}
@@media only screen and (max-width: 900px) {
  .container {
    width: 670px !important;
    margin: 0 auto !important;
    padding: 0 15px !important;
  }
  .start .help {
    position: absolute;
    right: 0px;
    top: 170px;
    cursor: pointer;
    text-align: center;
    width: 150px;
  }
  .start .help .all-button {
    font-size: 10px;
  }
  .start .help i {
    display: none;
  }
  .start .help .start {
    padding-top: 200px;
    width: 100%;
  }
  .vilets form .hafta {
    padding: 27px 0;
  }
  .ucer h1 {
    font-size: 30px;
  }
  .ucer-img {
    border-radius: 50%;
    min-width: 50px;
    min-height: 50px;
    overflow: hidden;
  }
  .ucer-img img {
    width: 150px;
    height: 150px;
  }
}

@@media only screen and (max-width: 1440px) {
  .container {
    width: 1140px;
    margin: 0 auto;
    padding: 15px 0;
  }
}

